.line-item {
    color: black !important;
    text-align: left !important;
}

.commute-header {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.commute-header-driver image {
  width: 30px;
  height: 30px;
  border-radius: 15px;
}

.commute-header-title {
  flex-grow: 1;
  margin-left: 10px;
  font-weight: 700;
}

.line-item .remark {
  font-size: 12px;
  color: gray;
}

.commute-line {
    display: flex;
    align-items: flex-start;
    flex-direction: column;
}

.commute-line-from, .commute-line-to {
    display: flex;
    align-items: center;
    padding: 2px 0;
}

.position {
    margin-left: 2px;
}
